{
	"manifest_version": 2,

	"name": "RFinder",
	"description": "Shows Reddit posts based on the current URL",
	"version": "1.0",

	"browser_action":{
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	},

	"permissions":[

		"activeTab",
		"https://ajax.googleapis.com/",
		"https://api.reddit.com/"
	]
}
